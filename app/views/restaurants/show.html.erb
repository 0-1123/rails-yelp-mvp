<h1><%= @restaurant.name %></h1>
<p><%= @restaurant.category %></p>
<h4>Address</h4>
<p><%= @restaurant.address %></p>
<% unless @restaurant.phone_number.empty? %>
  <h4>Phone number</h4>
  <p><%= @restaurant.phone_number %></p>
<% end %>
<h3>Reviews</h3>
<ul>
   <% @restaurant.reviews.each do |review| %>
    <li>
      <p> <%= review.rating%>/5 <%= review.content  %></p>
    </li>
   <% end %>
</ul>

<%= simple_form_for [@restaurant, @review] do |f| %>
  <% if @restaurant.errors.any? %>
    <div class="errors-container">
      <ul>
        <% @restaurant.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

 <div class="form-group">
    <%= f.label :content %>
    <%= f.text_field :content, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :rating %>
    <%= f.text_field :rating, class: 'form-control' %>
  </div>

  <%= f.submit "add a review", class: 'btn btn-warning' %>
<% end %>
<%= link_to "Back", restaurants_path, class: "badge badge-light" %>
